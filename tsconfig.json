{
  "compilerOptions": {
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true
  },
  "compileOnSave": true,
  "exclude": ["dist", "node_modules"],
  "references": []
}
