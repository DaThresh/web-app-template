{
  "compilerOptions": {
    "paths": {
      "@shared/*": ["./shared/*"]
    },
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "jsx": "react"
  },
  "compileOnSave": true,
  "include": ["server"],
  "exclude": ["dist", "node_modules"],
  "references": []
}
